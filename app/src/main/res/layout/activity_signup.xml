<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9E6"
    android:fillViewport="true"
    tools:context=".SignUpActivity"
    tools:theme="@style/Theme.MyApplication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 앱 로고 -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="앱 로고"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="fitCenter" />

        <!-- 회원가입 제목 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:text="회원가입"
            android:textColor="#8B5A2B"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- 아이디 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="아이디">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSignupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#5D4037"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 비밀번호 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="비밀번호"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSignupPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#5D4037"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 비밀번호 확인 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="비밀번호 확인"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="#5D4037"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 이메일 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="이메일">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="16dp"
                android:textColor="#5D4037"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 닉네임 입력 -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/MyTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:hint="닉네임">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:textColor="#5D4037"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 확인 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCompleteSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFD700"
            android:paddingVertical="14dp"
            android:text="확인"
            android:textAllCaps="false"
            android:textColor="#5D4037"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:elevation="2dp" />

    </LinearLayout>
</ScrollView>
