<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gold_bg">

    <!-- 앱 로고/아이콘 -->
    <ImageView
        android:id="@+id/imageHomeLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="앱 로고"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textHomeTitle"
        app:layout_constraintVertical_bias="0.3" />

    <!-- 홈 타이틀 -->
    <TextView
        android:id="@+id/textHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기분따라 밥"
        android:textSize="28sp"
        android:textColor="@color/dark_brown_text"
        android:textStyle="bold"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintTop_toBottomOf="@+id/imageHomeLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 서브 타이틀 -->
    <TextView
        android:id="@+id/textHomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 기분에 딱 맞는 음식을 추천해드려요"
        android:textSize="16sp"
        android:textColor="@color/dark_brown_text"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintTop_toBottomOf="@+id/textHomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- 메뉴고르러가기 버튼 (이름만 변경) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRecommendFood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="음식추천받기"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/dark_brown_text"
        android:textSize="18sp"
        android:backgroundTint="#FFD700"
        android:elevation="8dp"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
