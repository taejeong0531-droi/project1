<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Login Input Style -->
    <style name="LoginInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/gold</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="hintTextColor">@color/teal_700</item>
        <item name="boxBackgroundColor">@color/light_gold_bg</item>
        <item name="android:textColorHint">@color/light_brown_text</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/gold</item>
        <item name="android:textColor">@color/dark_brown_text</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>
